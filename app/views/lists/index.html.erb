<h1>List of film categories</h1>
<ul>
  <% @lists.each do |list| %>
    <li><%= link_to list.name, list_path(list) %></li>
  <% end %>
</ul>

<%= link_to 'Create a movie list', new_list_path, class: "btn btn-success" %>
<%= link_to 'Add a movie', new_movie_path, class: "btn btn-success" %>
<%= link_to 'See your movies', movies_path, class: "btn btn-success" %>
